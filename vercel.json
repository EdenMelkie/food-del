{
  "version": 2,
  "builds": [
    {
      "src": "backend/Admin/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    },
    {
      "src": "backend/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "backend/$1.js" },
    { "src": "/(.*)", "dest": "backend/Admin/$1" }
  ]
}
